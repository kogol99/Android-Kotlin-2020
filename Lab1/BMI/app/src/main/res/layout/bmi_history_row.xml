<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#F0F4F7"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0F4F7">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="10dp"
            app:contentPadding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/IV_Bmi_hisotry_image"
                    android:layout_width="35dp"
                    android:layout_height="60dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/poziom_1" />

                <TextView
                    android:id="@+id/TV_Bmi_history_date"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:text="Date"
                    android:textColor="#000"
                    android:textSize="15sp"
                    app:layout_constraintStart_toEndOf="@+id/IV_Bmi_hisotry_image"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/TV_Bmi_history_weight"
                    android:layout_width="46dp"
                    android:layout_height="19dp"
                    android:layout_marginTop="8dp"
                    android:text="weight"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@+id/TV_Bmi_history_date"
                    app:layout_constraintTop_toBottomOf="@+id/TV_Bmi_history_date" />

                <TextView
                    android:id="@+id/TV_Bmi_history_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="TextView"
                    app:layout_constraintStart_toEndOf="@+id/TV_Bmi_history_weight"
                    app:layout_constraintTop_toTopOf="@+id/TV_Bmi_history_weight" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/CV_Bmi_hisotry_bmi_display"
                    android:layout_width="68dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginBottom="13dp"
                    android:background="@drawable/selector"
                    android:textAlignment="center"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="5dp"
                    app:flow_horizontalAlign="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/TV_Bmi_history_bmi"
                        android:layout_width="60dp"
                        android:layout_height="19dp"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
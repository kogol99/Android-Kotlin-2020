<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:overScrollMode="ifContentScrolls"
    tools:context=".BmiDetails">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="306dp" />

    <TextView
        android:id="@+id/TV_Bmi_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="177dp"
        android:text="TextView"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TV_Bmi_Description"
        android:layout_width="458dp"
        android:layout_height="121dp"
        android:layout_marginEnd="70dp"
        android:scrollHorizontally="true"
        android:text="TextView"
        android:textAlignment="center"
        app:flow_horizontalAlign="center"
        app:flow_verticalAlign="center"
        app:layout_constraintBottom_toBottomOf="@+id/IV_Bmi_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/IV_Bmi_image"
        app:layout_constraintTop_toTopOf="@+id/IV_Bmi_image"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/IV_Bmi_image"
        android:layout_width="85dp"
        android:layout_height="140dp"
        android:layout_marginStart="60dp"
        android:contentDescription="people"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_Bmi_text"
        app:layout_constraintVertical_bias="0.23"
        app:srcCompat="@drawable/gruba"
        tools:srcCompat="@drawable/gruba" />

</androidx.constraintlayout.widget.ConstraintLayout>